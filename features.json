{
  "features": [
    {
      "id": 1,
      "name": "debug_mode",
      "category": "Debugging",
      "description": "Enables kernel debugging mode.",
      "command_enable": "echo 1 | sudo tee /proc/sys/kernel/debug",
      "command_disable": "echo 0 | sudo tee /proc/sys/kernel/debug",
      "command_query": "cat /proc/sys/kernel/debug",
      "supportedKernels": ["%ANY%", "5.10", "5.15", "6.1"],
      "supportedDistros": ["%ANY%", "Arch Linux", "Ubuntu"],
      "supportedDesktops": ["%ANY%", "GNOME", "KDE"]
    },
    {
      "id": 2,
      "name": "verbose_logs",
      "category": "Debugging",
      "description": "Increases kernel logging verbosity.",
      "command_enable": "echo 7 | sudo tee /proc/sys/kernel/printk",
      "command_disable": "echo 4 | sudo tee /proc/sys/kernel/printk",
      "command_query": "cat /proc/sys/kernel/printk",
      "supportedKernels": ["6.1", "6.5"],
      "supportedDistros": ["%ANY%", "Debian", "Fedora"],
      "supportedDesktops": ["GNOME", "KDE", "XFCE"]
    },
    {
      "id": 3,
      "name": "bbr",
      "category": "Networking",
      "description": "Enables BBR congestion control algorithm.",
      "command_enable": "echo \"bbr\" | sudo tee /proc/sys/net/ipv4/tcp_congestion_control",
      "command_disable": "echo \"reno\" | sudo tee /proc/sys/net/ipv4/tcp_congestion_control",
      "command_query": "cat /proc/sys/net/ipv4/tcp_congestion_control",
      "supportedKernels": ["5.15", "6.1", "6.5"],
      "supportedDistros": ["Ubuntu", "Fedora"],
      "supportedDesktops": ["%ANY%"]
    },
    {
      "id": 4,
      "name": "swappiness",
      "category": "Memory Management",
      "description": "Adjusts the swappiness value to control swap usage.",
      "command_enable": "echo 10 | sudo tee /proc/sys/vm/swappiness",
      "command_disable": "echo 60 | sudo tee /proc/sys/vm/swappiness",
      "command_query": "cat /proc/sys/vm/swappiness",
      "supportedKernels": ["%ANY%"],
      "supportedDistros": ["%ANY%"],
      "supportedDesktops": ["%ANY%"]
    },
    {
      "id": 5,
      "name": "transparent_hugepages",
      "category": "Memory Management",
      "description": "Controls Transparent Huge Pages (THP) for memory management.",
      "command_enable": "echo always | sudo tee /sys/kernel/mm/transparent_hugepage/enabled",
      "command_disable": "echo never | sudo tee /sys/kernel/mm/transparent_hugepage/enabled",
      "command_query": "cat /sys/kernel/mm/transparent_hugepage/enabled",
      "supportedKernels": ["%ANY%"],
      "supportedDistros": ["%ANY%"],
      "supportedDesktops": ["%ANY%"]
    },
    {
      "id": 6,
      "name": "iommu",
      "category": "Hardware",
      "description": "Enables IOMMU (Input-Output Memory Management Unit) support.",
      "command_enable": "echo 1 | sudo tee /sys/kernel/iommu_groups/enable",
      "command_disable": "echo 0 | sudo tee /sys/kernel/iommu_groups/enable",
      "command_query": "cat /sys/kernel/iommu_groups/enable",
      "supportedKernels": ["5.10", "5.15", "6.1"],
      "supportedDistros": ["%ANY%", "Arch Linux", "Debian"],
      "supportedDesktops": ["%ANY%"]
    },
    {
      "id": 7,
      "name": "scheduler_performance",
      "category": "Performance",
      "description": "Sets CPU scheduler to performance mode.",
      "command_enable": "echo performance | sudo tee /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor",
      "command_disable": "echo powersave | sudo tee /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor",
      "command_query": "cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor",
      "supportedKernels": ["%ANY%"],
      "supportedDistros": ["%ANY%"],
      "supportedDesktops": ["%ANY%"]
    },
    {
      "id": 8,
      "name": "kernel_task_scheduler",
      "category": "Performance",
      "description": "Optimizes the kernel task scheduler for low latency.",
      "command_enable": "echo 1 | sudo tee /proc/sys/kernel/sched_autogroup_enabled",
      "command_disable": "echo 0 | sudo tee /proc/sys/kernel/sched_autogroup_enabled",
      "command_query": "cat /proc/sys/kernel/sched_autogroup_enabled",
      "supportedKernels": ["%ANY%"],
      "supportedDistros": ["%ANY%"],
      "supportedDesktops": ["%ANY%"]
    },
    {
      "id": 9,
      "name": "disk_io_scheduler",
      "category": "Performance",
      "description": "Sets the disk I/O scheduler to 'mq-deadline' for better performance.",
      "command_enable": "echo mq-deadline | sudo tee /sys/block/sda/queue/scheduler",
      "command_disable": "echo cfq | sudo tee /sys/block/sda/queue/scheduler",
      "command_query": "cat /sys/block/sda/queue/scheduler",
      "supportedKernels": ["%ANY%"],
      "supportedDistros": ["%ANY%"],
      "supportedDesktops": ["%ANY%"]
    },
    {
      "id": 10,
      "name": "irqbalance",
      "category": "Performance",
      "description": "Distributes interrupt requests (IRQs) across multiple CPU cores.",
      "command_enable": "sudo systemctl start irqbalance",
      "command_disable": "sudo systemctl stop irqbalance",
      "command_query": "systemctl is-active irqbalance",
      "supportedKernels": ["%ANY%"],
      "supportedDistros": ["%ANY%"],
      "supportedDesktops": ["%ANY%"]
    },
    {
      "id": 11,
      "name": "filesystem_compression",
      "category": "Storage",
      "description": "Enables filesystem-level compression, reducing disk space usage but potentially affecting performance.",
      "command_enable": "[[ $(findmnt -n -o FSTYPE /) == btrfs ]] && ! mount | grep ' / ' | grep -q 'compress=' && sudo mount -o remount,compress=zstd / || echo 'Compression not supported or already enabled.'",
      "command_disable": "[[ $(findmnt -n -o FSTYPE /) == btrfs ]] && mount | grep ' / ' | grep -q 'compress=' && sudo mount -o remount,nocompress / || echo 'Not using Btrfs or compression is already disabled.'",
      "command_query": "mount | grep ' / ' | grep -o 'compress=[^,]*' || echo 'Compression disabled'",
      "supportedKernels": ["%ANY%"],
      "supportedDistros": ["%ANY%"],
      "supportedDesktops": ["%ANY%"]
    }
  ]
}
